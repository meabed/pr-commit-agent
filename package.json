{
  "name": "commit-pr-agent",
  "version": "0.1.0",
  "description": "CLI tool to generate commit messages, PR descriptions, and open GitHub PRs using an LLM",
  "main": "dist/index.js",
  "bin": {
    "commit-pr-agent": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meabed/pr-commit-agent.git"
  },
  "keywords": [
    "git",
    "github",
    "commit",
    "pr",
    "pull-request",
    "llm",
    "ai",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meabed/pr-commit-agent/issues"
  },
  "homepage": "https://github.com/meabed/pr-commit-agent#readme",
  "devDependencies": {
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "inquirer": "^8.2.6",
    "langchain": "^0.3.23",
    "node-fetch": "^2.7.0",
    "octokit": "^4.1.3",
    "openai": "^4.95.1",
    "ora": "^8.2.0",
    "simple-git": "^3.27.0"
  }
}
